# Environment variables for Docker Compose
# Copy this file to .env and customize the values

# Application Configuration
APP_NAME=anime-listing
APP_VERSION=1.0.0
NODE_ENV=development

# Domain Configuration
DOMAIN=animelisting.com
WWW_DOMAIN=www.animelisting.com
MONITORING_DOMAIN=monitoring.animelisting.com

# SSL Configuration
SSL_EMAIL=admin@animelisting.com

# Database Configuration (if needed in future)
# MYSQL_ROOT_PASSWORD=your_strong_password_here
# MYSQL_DATABASE=anime_listing
# MYSQL_USER=anime_user
# MYSQL_PASSWORD=anime_password

# Monitoring Configuration
GRAFANA_ADMIN_PASSWORD=changeme123
PROMETHEUS_RETENTION=15d

# Security Configuration
NGINX_WORKER_PROCESSES=auto
NGINX_WORKER_CONNECTIONS=1024

# Logging Configuration
LOG_LEVEL=warn
ACCESS_LOG_ENABLED=true

# Performance Configuration
GZIP_ENABLED=true
CACHE_MAX_AGE=31536000

# Development Configuration
DEV_PORT=8090
DEV_HOST=localhost

# Production Configuration
PROD_REPLICAS=2
PROD_MEMORY_LIMIT=512m
PROD_CPU_LIMIT=0.5

# Backup Configuration
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE=0 2 * * *

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=10s
HEALTH_CHECK_RETRIES=3
